<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <table width = '700'>
        <tr>
        <td style="vertical-align:top" width = '700'><%= yield %></td>
        <td style="vertical-align:top"><%= render 'layouts/sidebar' %></td>
        </tr>
        </table>
        </section>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>

